<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    
    <!-- Cấu hình servlet -->
    <servlet>
        <servlet-name>LuuLichHenServlet</servlet-name>
        <servlet-class>controller.LuuLichHenServlet</servlet-class>
    </servlet>

    <!-- Map URL đến servlet -->
    <servlet-mapping>
        <servlet-name>LuuLichHenServlet</servlet-name>
        <url-pattern>/LuuLichHenServlet</url-pattern>
    </servlet-mapping>

    <!-- Tùy chọn: cấu hình trang lỗi -->
    
</web-app>
